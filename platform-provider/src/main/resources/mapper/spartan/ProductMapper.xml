<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.sigo.sigocloudprovider.dao.spartan.ProductDao">

    <resultMap type="cn.sigo.sigocloudprovider.model.Product" id="BaseResultMap">
        <result property="productCode" column="product_code"/>
        <result property="productId" column="product_id"/>
        <result property="sellerCompanyId" column="seller_company_id"/>
    </resultMap>

    <!--查询商品信息-->
    <select id="queryProductInfo" resultMap="BaseResultMap">
        SELECT
          product_code,
          product_id,
          seller_company_id
        FROM
          t_product
        WHERE seller_company_id = #{companyId}
    </select>
</mapper>